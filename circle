#include<iostream.h>
#include<graphics.h>
using namespace std;
class circles{
	public:
    int x,y,di;
	int gd = DETECT , gm;
	initgraph(&gd , &gm , NULL);
    x=0;
    y=radius;
  void calculate(int xc,int yc,int radius){
     putpixel(x+xc,y+yc,GREEN);
}
}

int main(){
 circles c1;
	int xc,yc,radius;
	cout<<endl<<"Enter center points of circle:";
	cin>>xc>>yc;
	cout<<endl<<"Enter radius:";
	cin>>radius;
    c1.calculate(xc,yc,radius);
}